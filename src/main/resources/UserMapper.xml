<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xWash.dao.UserDao">

    <select id="getAllUsers" resultType="java.lang.String">
        select * from user;
    </select>

    <select id="getUserByCookie" resultType="java.lang.String" parameterType="java.lang.String">
        select cookie from user where cookie = #{cookie};
    </select>

    <insert id="addUser" parameterType="java.lang.String">
        insert into user(cookie)values(#{_cookie});
    </insert>

    <insert id="addRecord" parameterType="com.xWash.entity.Record">
        insert into record(cookie,building,date)values(#{cookie},#{building},#{date})
    </insert>


</mapper>